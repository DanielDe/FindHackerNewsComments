{
  "name": "Find Hacker News Comments",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Finds HN comment pages for the article you're viewing",
  "permissions": ["tabs"],
  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "24": "icons/icon-24.png",
      "32": "icons/icon-32.png"
    },
    "default_title": "Find Hacker News Comments",
    "default_popup": "popup.html"
  }
}
